<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/almond">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewSoccerNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/soccerGameNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewSoccerNews"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="4dp"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/newsDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="news details"
            android:layout_below="@id/soccerGameNewsTitle"
            android:textColor="@color/black"
            android:maxLines="3"
            android:layout_margin="4dp"
            android:padding="3dp"
            />

        <Button
            android:id="@+id/readMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsDetail"
            android:padding="5dp"
            android:text="Read More"
            android:textAlignment="textStart"
            android:background="@color/red"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsDetail"
            android:padding="5dp"
            android:text="Save"
            android:layout_alignParentRight="true"
            android:background="@color/red"
            android:textColor="@color/white"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>